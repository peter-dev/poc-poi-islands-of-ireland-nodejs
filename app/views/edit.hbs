{{> menu_user}}

<section class="ui segment">
  <div class="ui vertical segment">
    <form class="ui form" action="/edit" method="POST" enctype="multipart/form-data">
      <h3 class="ui header">Island Details</h3>
      <div class="two fields">
        <div class="required field">
          <label>Region (previously: {{island.costalZone.name}})</label>
          <select name="region" class="ui dropdown">
            <option value="">Region</option>
            {{#each categories}}
              <option value="{{name}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="required field">
          <label>Name</label>
          <input placeholder="Name" type="text" name="name" value="{{island.name}}" required>
        </div>
      </div>
      <div class="required field">
        <label>Description</label>
        <textarea placeholder="Description" name="description" required>{{island.description}}</textarea>
      </div>
      <div class="two fields">
        <div class="required field">
          <label>Latitude</label>
          <input placeholder="Latitude" type="number" step="0.00000001" name="lat" value="{{island.geo.lat}}" required>
        </div>
        <div class="required field">
          <label>Longitude</label>
          <input placeholder="Longitude" type="number" step="0.00000001" name="long" value="{{island.geo.long}}"required>
        </div>
      </div>
      <div class="field">
        <label>Upload file (optional)</label>
        <input type="file" name="file">
      </div>
      <input type="hidden" name="uuid" value="{{island.uuid}}">
      <button class="ui blue submit button">Submit</button>
    </form>
  </div>
  <div class="ui vertical segment">
    {{> error }}
    <form class="ui form" action="/delete/{{island.uuid}}" method="POST">
      <h4 class="ui dividing header">Delete Island</h4>
      <div class="required field">
        <div class="ui checkbox required">
          <input type="checkbox" tabindex="0" class="hidden" name="delete" value="yes">
          <label>I confirm to delete this island</label>
        </div>
      </div>
      <button class="ui red submit button">Delete</button>
    </form>
  </div>
</section>